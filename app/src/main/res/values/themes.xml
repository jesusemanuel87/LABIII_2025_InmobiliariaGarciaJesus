<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Base.Theme.LABIII_2025_InmobiliariaGarciaJesus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_variant_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        
        <!-- Text colors -->
        <item name="colorOnPrimary">@color/on_primary_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_light</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
    </style>

    <style name="Theme.LABIII_2025_InmobiliariaGarciaJesus" parent="Base.Theme.LABIII_2025_InmobiliariaGarciaJesus" />

    <style name="Theme.LABIII_2025_InmobiliariaGarciaJesus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LABIII_2025_InmobiliariaGarciaJesus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LABIII_2025_InmobiliariaGarciaJesus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
