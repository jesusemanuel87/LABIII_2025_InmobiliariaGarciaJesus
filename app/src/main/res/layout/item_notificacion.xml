<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de no leÃ­da (lÃ­nea azul a la izquierda) -->
        <View
            android:id="@+id/indicadorNoLeida"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:layout_marginEnd="12dp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvTituloNotificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Pago Recibido"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <!-- Mensaje -->
            <TextView
                android:id="@+id/tvMensajeNotificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Se ha registrado el pago de $150,000.00"
                android:textSize="14sp"
                android:textColor="?attr/android:textColorSecondary"
                android:maxLines="3"
                android:ellipsize="end"/>

            <!-- Fecha -->
            <TextView
                android:id="@+id/tvFechaNotificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="30/10/2025 19:30"
                android:textSize="12sp"
                android:textColor="?attr/android:textColorHint"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
