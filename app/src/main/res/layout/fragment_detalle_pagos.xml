<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTituloPagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagos del Contrato"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView de pagos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPagos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Mensaje cuando no hay pagos -->
    <TextView
        android:id="@+id/tvMensajePagos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No hay pagos registrados"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
