<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/android:colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card con Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/avatar_default"
                        android:contentDescription="Avatar del usuario"
                        android:padding="14dp" />

                    <!-- Nombre completo -->
                    <TextView
                        android:id="@+id/tvNombreCompleto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Apellido"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/tvEmailHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@ejemplo.com"
                        android:textSize="13sp"
                        android:textColor="?attr/android:textColorSecondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de Información Personal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Personal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- DNI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorOnSurface" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DNI"
                                android:textSize="12sp"
                                android:textColor="?attr/android:textColorHint"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12345678"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/android:textColorHint"
                        android:alpha="0.3"
                        android:layout_marginBottom="10dp" />

                    <!-- Nombre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:layout_marginEnd="16dp"
                            app:tint="#4CAF50" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre"
                                android:textSize="12sp"
                                android:textColor="?attr/android:textColorHint"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nombre"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:inputType="textPersonName" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/android:textColorHint"
                        android:alpha="0.3"
                        android:layout_marginBottom="10dp" />

                    <!-- Apellido -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="0dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:layout_marginEnd="16dp"
                            app:tint="#4CAF50" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apellido"
                                android:textSize="12sp"
                                android:textColor="?attr/android:textColorHint"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvApellido"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Apellido"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:inputType="textPersonName" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card de Contacto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de Contacto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:layout_marginEnd="16dp"
                            app:tint="#FF9800" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="12sp"
                                android:textColor="?attr/android:textColorHint"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="email@ejemplo.com"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:inputType="textEmailAddress" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/android:textColorHint"
                        android:alpha="0.3"
                        android:layout_marginBottom="10dp" />

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/stat_sys_phone_call"
                            android:layout_marginEnd="16dp"
                            app:tint="#9C27B0" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teléfono"
                                android:textSize="12sp"
                                android:textColor="?attr/android:textColorHint"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvTelefono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+54 123 456 7890"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"
                                android:background="@android:color/transparent"
                                android:enabled="false"
                                android:inputType="phone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón Editar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Editar Perfil"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Botón Cambiar Contraseña -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCambiarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cambiar Contraseña"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_lock_lock"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </ScrollView>

    <!-- Progress Bar flotante y centrado -->
    <ProgressBar
        android:id="@+id/progressBarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
