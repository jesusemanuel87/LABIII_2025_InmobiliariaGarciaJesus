<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvInmuebleContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n del inmueble"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvInquilinoContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del inquilino"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvPrecioContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 0.00 / mes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/tvFechasContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desde 01/01/2024 hasta 31/12/2024"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvEstadoContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
