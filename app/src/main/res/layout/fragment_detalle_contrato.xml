<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle del Contrato"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"
            android:layout_marginBottom="16dp" />

        <!-- Sección: Inmueble -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inmueble"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDireccionInmuebleContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dirección del Inmueble"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección: Inquilino -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inquilino"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvInquilinoContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Inquilino"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección: Datos del Contrato -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del Contrato"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvPrecioContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 50,000.00/mes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvFechaInicioContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inicio: 01/01/2024"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFechaFinContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fin: 31/12/2024"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvEstadoContratoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Activo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFechaCreacionContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creado: 01/01/2024"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="12dp" />

                <!-- Información de deudas (solo visible si hay deuda) -->
                <TextView
                    android:id="@+id/tvMesesAdeudados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meses adeudados: 2"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvImporteAdeudado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importe adeudado: $ 100,000.00"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón PAGOS -->
        <Button
            android:id="@+id/btnVerPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER PAGOS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/design_default_color_primary"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
